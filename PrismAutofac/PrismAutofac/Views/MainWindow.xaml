<Window x:Class="PrismAutofac.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behav="clr-namespace:Behavior"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    
                    <i:Interaction.Behaviors>
                        <behav:WindowBehavior />
                    </i:Interaction.Behaviors>
    
    <Grid>

        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File(_F)" />
        </Menu>
        <Grid Grid.Row="1">

            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Name="A" Width="Auto" />
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Button Content="Button1" 
                    Command="{Binding NavigateCommand}" CommandParameter="PropertyGridUserControl"
                    HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Content="Button2" 
                    Command="{Binding Button2Command}"
                    HorizontalAlignment="Left" Margin="20,35,0,0" VerticalAlignment="Top" Width="75"/>
                <Rectangle Width="30" Name="rectangle1" Stroke="Black" Fill="BurlyWood"
                           HorizontalAlignment="Right"
                           >

                </Rectangle>

                <Image x:Name="image01" Source="/img/p2.png" 
                       VerticalAlignment="Center" HorizontalAlignment="Right" Width="25"
                       Opacity="0.4">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1.0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Grid>
            <GridSplitter 
                Grid.Column="1" Width="5" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
            <Grid 
                Grid.Column="2">
                <ContentControl prism:RegionManager.RegionName="SubRegion" />
            </Grid>
        </Grid>
    </Grid>
</Window>
