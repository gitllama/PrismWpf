<Window x:Class="PrismAutofac.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
                prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <Grid>

        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Button Content="Button1" 
                    Command="{Binding NavigateCommand}" CommandParameter="PropertyGridUserControl"
                    HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Button2" 
                    Command="{Binding Button2Command}"
                    HorizontalAlignment="Left" Margin="20,35,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
        <Grid Grid.Column="2">
            <ContentControl prism:RegionManager.RegionName="SubRegion" />
        </Grid>
    </Grid>
</Window>
